{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ESNext"],
    "paths": {
      "@mcs/ffi/*": ["./packages/ffi/src/*"],
      "@mcs/utils/*": ["./packages/utils/src/*"],
      "@mcs/server/*": ["./packages/server/src/*"]
    },
    "outDir": "./dist"
  }
}
